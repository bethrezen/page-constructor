{
  "name": "@yandex-data-ui/page-constructor",
  "version": "0.0.12",
  "description": "Cloud Page Constructor",
  "author": "DataUI Team <data-ui@yandex-team.ru>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git@github.yandex-team.ru:data-ui/page-constructor.git"
  },
  "files": [
    "build",
    "styles",
    "assets"
  ],
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "typings": "build/esm/index.d.ts",
  "scripts": {
    "deps:install": "npm ci",
    "deps:truncate": "npm prune --production",
    "lint:js": "eslint .",
    "lint:styles": "stylelint ./styles/**/*.scss ./src/**/*.scss",
    "lint:prettier": "prettier --check '**/*.{js,jsx,ts,tsx,scss}'",
    "lint": "npm-run-all --parallel lint:*",
    "typecheck": "tsc --noEmit",
    "dev": "npm run storybook:start",
    "start": "node dist",
    "build:compile": "tsc -p tsconfig.publish.json",
    "build": "NODE_OPTIONS=\"--max-old-space-size=4096\" ui-core build",
    "storybook:start": "start-storybook -p 7009",
    "storybook:build": "build-storybook -c .storybook -o storybook-static .storybook/public",
    "docker:build": "docker build . -t registry.yandex.net/data-ui/page-constructor:${npm_package_version}",
    "docker:push": "docker push registry.yandex.net/data-ui/page-constructor:${npm_package_version}",
    "docker:release": "ya tool dctl release docker --release-type stable -t ${npm_package_version} data-ui/page-constructor",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "bem-cn-lite": "^4.0.0",
    "lodash": "^4.17.21",
    "react-player": "^2.9.0",
    "react-slick": "^0.28.1",
    "react-spring": "^9.3.0",
    "react-transition-group": "^4.4.2",
    "react-waypoint": "^10.1.0",
    "snakecase-keys": "^5.1.0"
  },
  "peerDependencies": {
    "@yandex-data-ui/common": "^8.0.0",
    "@yandex-data-ui/i18n": "^0.13.0",
    "@doc-tools/components": "^1.0.0",
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@doc-tools/components": "^1.11.0",
    "@doc-tools/transform": "^2.1.1",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-knobs": "^6.3.1",
    "@storybook/addon-viewport": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@types/lodash": "^4.14.176",
    "@types/react": "^16.14.20",
    "@types/react-router-dom": "^5.3.2",
    "@types/react-slick": "^0.23.7",
    "@types/react-transition-group": "^4.4.4",
    "@yandex-data-ui/cloud-components": "^6.46.0",
    "@yandex-data-ui/cloud-schemas": "^2.124.0",
    "@yandex-data-ui/common": "^8.31.5",
    "@yandex-data-ui/i18n": "^0.13.0",
    "@yandex-data-ui/tsconfig": "^0.4.0",
    "@yandex-data-ui/ui-core": "^1.8.0",
    "@yandex-data-ui/webpack-levels": "^2.1.0",
    "eslint": "^7.32.0",
    "eslint-config-data-ui": "^11.2.3",
    "eslint-plugin-local": "./eslint-plugin-local",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "2.4.1",
    "prettier-config-data-ui": "^1.0.2",
    "react-router-dom": "^5.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-data-ui": "^2.1.2",
    "stylelint-scss": "^3.21.0",
    "svg-sprite-loader": "^6.0.11",
    "typescript": "4.4.4"
  },
  "lint-staged": {
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --quiet",
      "prettier --write"
    ]
  },
  "preview-generator": {
    "prepare": [
      "npm i @yandex-data-ui/core@3.83.0",
      "npm run storybook:build",
      "npx sb extract",
      "touch storybook-static/metadata.json",
      "rm -rf dist/public",
      "mv storybook-static dist/public",
      "mkdir -p dist/run"
    ],
    "env": {
      "NODE_ENV": "production"
    }
  },
  "ui-core": {
    "images": [
      "assets/images"
    ],
    "icons": [
      "assets/icons"
    ],
    "lib": {
      "internalDirs": [
        "stories",
        "demo",
        "internal-typings",
        "**/__stories__"
      ]
    }
  }
}
